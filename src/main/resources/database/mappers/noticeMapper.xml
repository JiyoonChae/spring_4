<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
 <mapper namespace="com.jy.s4.board.notice.NoticeDAO">   
 	<update id="noticeUpdate" parameterType="NoticeDTO"> 
 		update board set title=#{title}, contents=#{contents} where num=#{num}
 	</update>
 
	<delete id="noticeDelete" parameterType="NoticeDTO">
		delete board where num=#{num}
	</delete> 
 
 	<select id="noticeSelect" parameterType="NoticeDTO" resultType="NoticeDTO">
 		select * from board where num = #{num}
 	</select>
 
	<insert id="noticeWrite" parameterType="NoticeDTO">
		insert into board values(board_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0)
	</insert> 
 
 	<select id="noticeList" resultType="NoticeDTO" parameterType="Pager">  <!-- id는 사용할 메서드명을 써주면 좋음 -->
 		  <!-- ; 필요없음 -->
 		SELECT * FROM
		(select rownum as R, N.* from 
		(select * from board where 
		<choose>
			<when test="kind =='tt'">title</when>
			<when test="kind =='wr'">writer</when>
			<otherwise>contents	</otherwise>
		</choose> 
		like '%'||#{search}||'%' order by num desc) N)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
 	</select>
 	
 	<select id="noticeCount" resultType="long" parameterType="Pager">
 		select count(num) from board
 		where
 		<choose>
			<when test="kind =='tt'">title</when>
			<when test="kind =='wr'">writer</when>
			<otherwise>contents	</otherwise>
		</choose> 
		like '%'||#{search}||'%'
 	</select>
 
 </mapper>